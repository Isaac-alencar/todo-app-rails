<h2 class="text-xl text-slate-200 font-bold mt-20 mb-10">Sign up</h2>

<%= form_for(
              resource, 
              as: resource_name, 
              url: registration_path(resource_name),
              html: { class: 'w-1/3' }
                                      ) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field mb-5">
    <%= f.label :name, class: 'text-slate-200 mb-5' %><br />
    <%= f.text_field :name, autofocus: true, class: 'input' %>
  </div>

  <div class="field mb-5">
    <%= f.label :email, class: 'text-slate-200 mb-5' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
  </div>

  <div class="field  mb-5">
    <%= f.label :password, class: 'text-slate-200 mb-5' %>
    <% if @minimum_password_length %>
    <em class="text-slate-200 mb-5">(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'input' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: 'text-slate-200 mb-5' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input' %>
  </div>

  <%= f.submit "Sign up", class: 'button w-2/5 font-bold h-[34px] mt-5' %>
<% end %>


<div class="flex flex-col items-center justify-center mt-10">
  <%= render "users/shared/links" %>
</div>
